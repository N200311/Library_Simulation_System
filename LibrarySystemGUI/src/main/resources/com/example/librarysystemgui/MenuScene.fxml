<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="380.0" prefWidth="380.0" style="-fx-background-color: #e6e6e6;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.librarysystemgui.MenuController">
   <children>
      <VBox alignment="TOP_CENTER" layoutX="124.0" layoutY="64.0" style="-fx-spacing: 20;">
         <children>
            <Button fx:id="AddBT" mnemonicParsing="false" onAction="#AddBTAction" style="-fx-background-color: white;" text="Add Book ">
               <font>
                  <Font name="Times New Roman" size="14.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Button>
            <Button fx:id="RemoveBT" mnemonicParsing="false" onAction="#RemoveBTAction" style="-fx-background-color: white;" text="Remove Book ">
               <font>
                  <Font name="Times New Roman" size="14.0" />
               </font>
            </Button>
            <Button fx:id="BorrowBT" mnemonicParsing="false" onAction="#BorrowBTAction" style="-fx-background-color: white;" text="Borrow Book ">
               <font>
                  <Font name="Times New Roman" size="14.0" />
               </font>
            </Button>
            <Button fx:id="ReturnBT" mnemonicParsing="false" onAction="#ReturnBTAction" style="-fx-background-color: white;" text="Return Book">
               <font>
                  <Font name="Times New Roman" size="14.0" />
               </font>
            </Button>
            <Button fx:id="ViewBT" mnemonicParsing="false" onAction="#ViewBTAction" style="-fx-background-color: white;" text="View Library Status">
               <font>
                  <Font name="Times New Roman" size="14.0" />
               </font>
            </Button>
            <Button fx:id="ExitBT" mnemonicParsing="false" onAction="#ExitBTAction" style="-fx-background-color: white;" text="Exit System">
               <font>
                  <Font name="Times New Roman" size="14.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
